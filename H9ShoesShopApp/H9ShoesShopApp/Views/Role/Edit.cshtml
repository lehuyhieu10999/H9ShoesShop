@model EditRole


<form asp-controller="Role" asp-action="Edit" method="post">
    <input hidden asp-for="RoleId" value="@Model.RoleId" />
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="RoleName"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group justify-content-center">
        <button type="submit" class="btn btn-primary form-group mr-5" >Cập nhật</button>
        <a asp-controller="Role" asp-action="Index" class="btn btn-warning form-group" >Trở lại</a>
    </div>
</form>
