@inject ICategoryRepository categoryRepository
@model List<CartItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categoryname = ViewBag.CategoryName;
    
}


<div class="container single_product_container">
    <div class="row">
        <div class="col">
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count > 0)
                    {
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead class="thead-dark" style="text-align:center">
                                <tr>
                                    <td>Mã SP</td>
                                    <td>Tên SP</td>
                                    <td>Ảnh SP</td>
                                    <td>Số lượng</td>
                                    <td>Đơn giá</td>
                                    <td>Thành tiền</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody style="text-align:center">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Product.ProductId</td>
                                        <td>@item.Product.ProductName</td>
                                        <td><img src="~/images/Product/@item.Product.PathImage" width="100" /></td>
                                        <td><input id="quantity" type="text" class="txtQuantity" min="1" value="@item.Quantity" style="width:70px;text-align:center" oninput="updatequantity(this,@item.Product.Price,@item.Product.Sale)" /></td>
                                        <td id="price">@currency(item.Product.Price - item.Product.Price * item.Product.Sale / 100)</td>
                                        <td id="pricetotal">@currency((item.Product.Price - item.Product.Price * item.Product.Sale/100)*item.Quantity)</td>
                                        <td><a href="#" data-id="@item.Product.ProductId" class="btn-delete">Xoá</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                        <a class="btn btn--blue" asp-controller="Home" asp-action="Index">Tiếp tục mua hàng</a>
                        <a id="btnUpdate" class="btn" asp-controller="Cart" asp-action="Update">Cập nhật giỏ hàng</a>
                        <a id="btnDeleteAll" class="btn" asp-controller="Cart" asp-action="Delete">Xoá giỏ hàng</a>
                        <a id="btnPayment" class="btn" asp-controller="Cart" asp-action="Payment">Thanh toán</a>
                    }
                    else
                    {
                        <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
                    }

                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        
       
        @functions
        {
        public string currency(float money1)
        {
            var vietnam = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
            string money2 = String.Format(vietnam, "{0:c}", money1);
            int start = money2.Length - 1;
            return money2.Replace(",00", "");
        }
    }
        function updatequantity(input, price, sale) {
            var quantity = input.value;
            var x = (price - price * sale / 100) * quantity;
            x = x.toLocaleString('it-IT', { style: 'currency', currency: 'VND' });
            console.log(x);  
            document.getElementById("pricetotal").innerHTML = x;
        }
    </script>
}
