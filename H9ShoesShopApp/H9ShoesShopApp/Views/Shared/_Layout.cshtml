                                                <li><a asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng ký</a></li>
                                            </ul>
                                        </li>
                                    }
                                    @if (roles.Count > 0)
                                    {
